rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.userId;
    }

    match /categories {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}