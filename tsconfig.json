{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@ahoi-world/*": ["./app/*"],
			"@ahoi-world/firebase/*": ["./firebase/*"],
			"@ahoi-world/lib/*": ["./lib/*"],
			"@ahoi-world/providers/*": ["./providers/*"],
			"@ahoi-world/types/*": ["./types/*"]
		},
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
